-# encoding: utf-8
.jumbotron
  - if @total > 0
    %h1 Ea!
  - elsif @total < 0
    %h1 Estamos cagadas!
  - else
    %h1 No hay un choto

  - if @monedas.count == 1
    %h2= @totales.first.format
  - else
    %h2 Tenemos
    %ul.list-inline
      - @totales.each do |total|
        %li= total.format
  .media
    -@quien_los_tiene.each do |quien|
      %img{ gravatar_attrs(quien.responsable, size: 25, secure: request.secure?),
            title: "#{quien.nombre} tiene #{quien.subtotal.format}" }
.row
  .col-md-6
    = partial 'dinero/cargar'
  .col-md-6
    = partial 'layouts/howto'

= paginate @dineros

.row
  -@dineros.each do |dinero|
    = partial 'dinero/ficha', locals: { dinero: dinero }
