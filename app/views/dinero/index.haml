-# encoding: utf-8
.hero-unit
  - if @total > 0
    %h1 Ea!
  - elsif @total < 0
    %h1 Estamos cagadas!
  - else
    %h1 No hay un choto

  - if @monedas.count == 1
    %h2= @totales.first.format
  - else
    %h2 Tenemos
    %ul.inline
      - @totales.each do |total|
        %li= total.format
  .media
    -@quien_los_tiene.each do |quien|
      %img{ gravatar_attrs(quien.responsable, size: 25, secure: request.secure?),
            title: "#{quien.nombre} tiene #{quien.subtotal.format}" }

= partial 'dinero/cargar'
= paginate @dineros

.row
  .span6
    -@dineros.each do |dinero|
      .media
        %a{class: 'pull-left', href: '#'}
          %img{ gravatar_attrs(dinero.responsable,
                               size: 70,
                               title: dinero.nombre,
                               secure: request.secure? ) }
        .media-body
          %h4.media-heading= dinero.dinero.format
          %blockquote
            %p= dinero.comentario
            %small
              %cite= dinero.nombre
