-# encoding: utf-8
%h2 Transferencia entre pescadors

-form_for :dinero, url(:dinero, :transferir), class: 'form-horizontal col-md-6' do |f|
  .form-group
    =f.email_field :responsable_entrega,
                   placeholder: 'Pescador que aportó el tiempo',
                   class: 'form-control',
                   value: params[:responsable_entrega]
    %span.help-inline
      Nombre del pescador que aportó el tiempo

  .form-group
    =f.email_field :responsable_recibe,
                   placeholder: 'Pescador que recibió el tiempo',
                   class: 'form-control',
                   value: params[:responsable_recibe]
    %span.help-inline
      Nombre del pescador que recibió el tiempo

  .form-group
    =f.text_field :cantidad,
                  placeholder: 'Cuanto tiempo cambió de manos',
                  class: 'form-control',
                  value: params[:cantidad]
    %span.help-inline
      Cantidad transferida (ej: 120.25)

  .form-group
    =f.text_field :moneda,
                  placeholder: 'HS u otra moneda',
                  class: 'form-control',
                  value: params[:moneda]
    %span.help-inline
      (HS: horas, JORNADA: jornada de madre activa, COCINA: turno de cocina)

  .form-group
    =f.text_area :comentario,
                 placeholder: 'Por que motivo se realizó la transferencia',
                 class: 'form-control',
                 value: params[:comentario]

  .form-group
    =f.submit :transferir, class: 'btn btn-primary'
